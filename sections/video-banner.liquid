      font-size: 2rem;
    }
    
    #VideoBanner-{{ section.id }} .content-overlay .summary {
      font-size: 1rem;
      max-width: 90%;
    }
    
    #VideoBanner-{{ section.id }} .content-overlay .cta-buttons {
      flex-direction: column;
    }
  }
